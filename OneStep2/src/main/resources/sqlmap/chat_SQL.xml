<mapper namespace="kr.or.ddit.mapper.ChatMapper">
	
	
	<insert id = "insertChat" parameterType="map">
		INSERT INTO chat (
			chat_id, chat_content, chat_date, mem_id, chatroom_id
		) VALUES (
			seq_chatid.nextval, #{chatContent}, sysdate, #{memId}, null
		)
	</insert>
	
