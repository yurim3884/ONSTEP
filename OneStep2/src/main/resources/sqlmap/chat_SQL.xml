	<select id="selectChatList" parameterType="map" resultType="memberVO">
		 SELECT mem_id, mem_nick, mem_status
	    FROM member
	    WHERE mem_id != #{memId} AND (
	        (#{memStatus} IN ('1', '2') AND mem_status = '3')
	        OR (#{memStatus} = '3' AND mem_status IN ('1', '2'))
	    )
	</select>
	
