    <script src="${pageContext.request.contextPath }/resources/bootstrap/js/bootstrap.min.js"></script>
    <script src="${pageContext.request.contextPath }/resources/assets/js/authentication/auth_1.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Page Level Plugin/Script Ends -->
    
    <script type="text/javascript">

	$(function(){
		var idBtn = $('#idBtn');
		var pwBtn = $('#pwBtn');
		
		idBtn.on("click",function(){

			$.ajax({
				url: "/member/idForget",  
				  type: "GET",
				  data: {memName : $('#memName').val(),
						 memEmail : $('#memMail').val()
					  },  
				  success: function(result) {
				      console.log(result)
				      if(result!="FAILED"){
						$('#idZone').text("회원님의 ID는 "+result+"입니다");
					      }else{
							alert('해당하는 ID를 찾을수 없습니다.');
						      }
				      }
				  ,
				  error: function(result) {
				      console.log(result.responseText); //responseText의 에러메세지 확인
				  }
				});
			});





		pwBtn.on("click",function(){

			$.ajax({
				url: "/member/pwForget",  
				  type: "GET",
				  data: {memId : $('#memId').val(),
						 memEmail : $('#memMail2').val()
					  },  
				  success: function(result) {
				      console.log(result)
				      if(result!="FAILED"){
				    	  alert('메일로 임시비밀번호가 발송되었습니다.');
					      }else if(result==="MAILFAILED"){
							alert('메일전송에 실패했습니다.');
						      }else{
								alert('해당하는 계정을 찾을수 없습니다.')
							      }
				      }
				  ,
				  error: function(result) {
				      console.log(result.responseText); //responseText의 에러메세지 확인
				  }
				});
			});
		


		});
	
    </script>
