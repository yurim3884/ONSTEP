<!-- 		예외 타입을 아용한 이동 대상 페이지 설정 -->
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/WEB-INF/views/error/error.jsp</location>
	</error-page>

<!-- 	기본 에러 페이지 설정 -->
	<error-page>
		<location>/WEB-INF/views/error/error.jsp</location>
	</error-page>
	
</web-app>
